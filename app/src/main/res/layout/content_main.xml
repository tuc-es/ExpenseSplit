<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/PanelExpenseList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="1"
        >

        <WebView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/webViewExpenseList"
            android:background="#FC3321"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            />

    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/PanelOfflineActions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="1"
        >

        <WebView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/webViewOfflineActions"
            android:background="#FC3321"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            />


    </GridLayout>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/PanelAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="1"
        >

        <WebView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/webViewAdmin"
            android:background="#FC3321"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            />


    </GridLayout>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/PanelExpensesToApprove"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="1"
        >

        <WebView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/webViewExpensesToApprove"
            android:background="#FC3321"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            />


    </GridLayout>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/PanelOverview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="1"
        >

        <WebView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/webViewOverview"
            android:background="#FC3321"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            />


    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/PanelAddExpense"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        >

        <TextView
            android:text="Amount: "
            android:padding="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            />

        <EditText
            android:id="@+id/editTextNewExpenseValue"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="0dip"
            android:layout_gravity="fill_horizontal"
            android:ems="10"
            android:layout_columnWeight="1"
            android:inputType="numberDecimal"
            android:text="" />

        <TextView
            android:text="Description: "
            android:padding="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            />

        <EditText
            android:id="@+id/editTextNewExpenseText"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="0dip"
            android:layout_gravity="fill_horizontal"
            android:ems="10"
            android:layout_columnWeight="1"
            android:inputType="text"
            android:text="" />

        <Button
            android:id="@+id/buttonAddExpense"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="Add expense" />

    </GridLayout>



    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/PanelReimbursement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        >

        <TextView
            android:text="Amount: "
            android:padding="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            />

        <EditText
            android:id="@+id/editTextNewReimbursementValue"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="0dip"
            android:layout_gravity="fill_horizontal"
            android:ems="10"
            android:layout_columnWeight="1"
            android:inputType="numberDecimal"
            android:text="" />

        <TextView
            android:text="to whom: "
            android:padding="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            />

        <Spinner
            android:id="@+id/spinnerReimbursementPerson"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="0dip"
            android:layout_gravity="fill_horizontal"
            android:ems="10"
            android:layout_columnWeight="1"
            android:inputType="text"
            android:text="" />

        <Button
            android:id="@+id/buttonReimburse"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="Reimburse" />

    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/PanelAddTeam"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="5"
        >

        <TextView
            android:text="Team Members: "
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:textSize="16sp"
            android:padding="10dip"
            android:layout_column="0"
            android:layout_row="0"

            />
        <!-- android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
             android:layout_gravity="fill"-->


        <ListView
            android:id="@+id/memberList"

            android:layout_row="1"
            android:layout_column="0"

            android:layout_width="0dip"
            android:layout_height="0dip"

            android:layout_gravity="fill"
            android:textSize="16sp"

            android:layout_columnSpan="3"

            android:background="#D1C4E9"
            android:dividerHeight="1dp"

            android:horizontalSpacing="3dp"
            android:verticalSpacing="3dp"

            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:stretchMode="columnWidth"

            />
        <!-- android:alwaysDrawnWithCache="true"

        -->

        <TextView
            android:text="New member name:"
            android:padding="3dip"
            android:textColor="#673AB7"
            android:layout_column="0"
            android:layout_row="2"
            />
        <!-- android:layout_gravity="fill"-->


        <EditText
            android:id="@+id/editTextNewMemberName"
            android:layout_column="1"
            android:layout_row="2"
            android:inputType="textPersonName"
            android:text=""
            android:layout_gravity="fill_horizontal"
            />
        <!-- android:layout_width="0dip"

            android:ems="10"
            android:layout_columnWeight="1"-->

        <Button
            android:id="@+id/buttonAddMember"
            android:background="#673AB7"
            android:textColor="#FFFFFF"
            android:layout_column="2"
            android:layout_row="2"
            android:padding="5dip"
            android:text="Add" />
        <!--android:layout_gravity="fill" -->

        <TextView
            android:text="OR"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="italic"
            android:padding="10dip"
            android:layout_gravity="fill_horizontal"
            />

        <Button
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:text="Register New Team"
            android:textSize="18sp"
            android:textAlignment="center"
            android:background="#673AB7"
            android:textColor="#FFFFFF"
            android:id="@+id/buttonAddTeam"
            />
        <!--android:gravity="left|center_vertical"  -->

    </GridLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/PanelSelectAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
        >

        <TextView
            android:text="Available Teams, click to select: "
            android:padding="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            />

        <ListView
            android:id="@+id/listViewAvailableTeams"
            android:background="#8CDD81"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_width="0dip"
            android:layout_height="90dip"
            android:layout_gravity="fill"
            android:textSize="16sp"
            android:alwaysDrawnWithCache="true"
            android:dividerHeight="1dp"
            android:horizontalSpacing="3dp"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:verticalSpacing="3dp"
            />

        <TextView
            android:text="Add Team: "
            android:padding="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            />

        <EditText
            android:id="@+id/editTextNewTeamLogin"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="0dip"
            android:layout_gravity="fill_horizontal"
            android:ems="10"
            android:layout_columnWeight="1"
            android:inputType="textPersonName"
            android:text="" />

        <Button
            android:layout_column="2"
            android:layout_row="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add"
            android:id="@+id/buttonLoginTeam"
            />


    </GridLayout>



</android.support.constraint.ConstraintLayout>